<header class='container mb-3'>
    <h1 class='text-center text-decoration-underline fst-italic'>Vista de Productos</h1>
</header>

<% if(products.length > 0) { %>
    <div class='table-responsive'>
        <table class='table table-dark table-hover container'>
            <thead>
                <tr style='color: yellow'>
                    <th>#</th>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(item => { %>
                    <tr>
                        <th><%= item.id %></th>
                        <th><%= item.title %></th>
                        <th><%= item.price %></th>
                        <th><img width="40" height="40" src="<%=item.thumbnail %>" alt="image" /></th>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href='/api' class='btn btn-primary'>Ir al Formulario</a>
    </div>
<% } else { %>
    <h3 class='alert alert-danger'>No se encontraron productos</h3>
    <a href='/api' class='btn btn-primary'>Ir al Formulario</a>
<% } %>